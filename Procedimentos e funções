01 - import java.util.*;
class Main {
  public static void main(String[] args) {
    dobro();
    grande();
    media();
    fatorial();
  }
   public static int dobro(){
     Scanner sc = new Scanner(System.in);
     int num, soma;

     System.out.print("Informe a um numero inteiro: ");
     num = sc.nextInt();
     soma = num * 2;
     System.out.println("DOBRO DE " + num + " é "+ soma);
     return soma;
}
  public static int grande(){
     Scanner sc = new Scanner(System.in);
     int num1, num2, soma, maior;
    
     System.out.println();
     System.out.println("Informe dois numero inteiros: ");
     num1 = sc.nextInt();
     num2 = sc.nextInt();   
    
    if(num1 > num2){
      maior = num1;
      System.out.println("MAIOR = " + num1);
    }
    else {
      maior = num2;
     System.out.println("MAIOR = " + num2);
    }
     return maior; 
  }
  public static int media(){
    Scanner sc = new Scanner(System.in);
    
    System.out.println();
    System.out.println("Informe três numeros: ");
    int a = sc.nextInt();
    int b = sc.nextInt();
    int c = sc.nextInt();

    int conta = (a + b + c) / 3;
     int soma = conta;
    System.out.println("MEDIA É IAGUAL A : " + soma);
    
    return soma;
  } 
  public static int fatorial(){  
    Scanner sc = new Scanner(System.in);
    int n, i, fat = 1;
    
    System.out.println();
    System.out.print("Informe um numero: ");
    n = sc.nextInt();
    
    for (i = 1; i <= n; i++){
      fat *= i;     
    }
    
    System.out.println(n + "! = " + fat);
  
    return fat;
  }
}
